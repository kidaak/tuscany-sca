    </policySet>
    
    <policySet name="ps2" provides="authorization" appliesTo="sca:implementation">
        <tuscany:jmsTokenAuthentication xmlns:foo="http://tuscany.apache.org/foo" tokenName="foo:myname"/>
    </policySet>
