             xmlns:sca="http://www.osoa.org/xmlns/sca/1.0">
             
    <!-- POLICY SETS -->
    <policySet name="ps1" provides="authorization" appliesTo="sca:implementation">
        <tuscany:jmsHeader JMSType="ABC" 
                           JMSCorrelattionID="DEF"
                           JMSDeliveryMode="PERSISTENT"
                           JMSTimeToLive="123"
                           JMSPriority="4">
