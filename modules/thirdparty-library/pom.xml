<project>
    <modelVersion>4.0.0</modelVersion>
    <parent>
        <groupId>org.apache.tuscany.sca</groupId>
        <artifactId>tuscany-modules</artifactId>
        <version>1.4-SNAPSHOT</version>
        <relativePath>../pom.xml</relativePath>
    </parent>
    <artifactId>tuscany-thirdparty-library</artifactId>
    <name>Apache Tuscany OSGi Bundle for Third Party Jars</name>

    <dependencies>
        <dependency>
            <groupId>org.apache.tuscany.sca</groupId>
            <artifactId>tuscany-distribution-all</artifactId>
            <type>pom</type>
            <version>1.4-SNAPSHOT</version>
        </dependency>
    </dependencies>

    <build>
        <plugins>
            <plugin>
              <artifactId>maven-clean-plugin</artifactId>
              <configuration>
                <filesets>
                  <fileset>
                    <directory>${basedir}/lib</directory>
                    <includes>
                      <include>*</include>
                    </includes>
                    <followSymlinks>false</followSymlinks>
                   </fileset>
                 </filesets>
               </configuration>
             </plugin>
            
            <plugin>
                <groupId>org.apache.tuscany.sca</groupId>
                <artifactId>tuscany-maven-bundle-plugin</artifactId>
                <executions>
                    <execution>
                        <id>assemble-thirdparty-bundle</id>
                        <goals>
                            <goal>assemble-thirdparty-bundle</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>

            <plugin>
                <groupId>org.apache.tuscany.sca</groupId>
                <artifactId>tuscany-maven-bundle-plugin</artifactId>
                <executions>
                    <execution>
                        <id>fixup-pde-classpath</id>
                        <goals>
                            <goal>fixup-pde-classpath</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>

        </plugins>
    </build>
</project>
