                <module>../../../modules/workspace</module>
                <module>../../../modules/workspace-impl</module>
                <module>../../../modules/workspace-xml</module>
                <module>../../../modules/xsd</module>
                <module>../../../modules/xsd-xml</module>
            </modules>
        </profile>
    </profiles>

</project>
