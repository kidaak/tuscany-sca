                <artifactId>shade-maven-plugin</artifactId>
                <version>1.0-alpha-7</version>
                <executions>
                    <execution>
                        <phase>package</phase>
                        <goals>
                            <goal>shade</goal>
                        </goals>
                        <configuration>
                            <shadedGroupFilter>org.apache.tuscany</shadedGroupFilter>
                            <shadedArtifactAttached>false</shadedArtifactAttached>

